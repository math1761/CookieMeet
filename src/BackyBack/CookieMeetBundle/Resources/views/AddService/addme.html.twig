<body>
{% block stylesheets %}
    {% stylesheets '@BackyBackCookieMeetBundle/Resources/public/css/*' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">BackyBack</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="/admin">Interface Admin</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Register</a></li>
            </ul>
        </div>
    </div>
</nav><br>

<section>
{{ form_start(form) }}

<h1> Ajouter un plat </h1><br>
<div class="form-row">
    {{ form_label(form.plateName, "Nom du plat") }}
    {{ form_widget(form.plateName) }}
</div>
<br>
<div class="form-row">
    {{ form_label(form.plateCategory, "Type de cuisine") }}
    {{ form_widget(form.plateCategory) }}
</div>
<br>
<div class="form-row">
    {{ form_label(form.platePrice, "Prix") }}
    {{ form_widget(form.platePrice) }}
</div>
<br>
<div class="form-row">
    {{ form_label(form.plateExcerpt, "Description du plat") }}
    {{ form_widget(form.plateExcerpt) }}
</div>
<br>

<div class="form-row">
    {{ form_label(form.save, "Enregistrer") }}
    {{ form_widget(form.save) }}
</div>
{{ form_end(form) }}

</section>
</body>